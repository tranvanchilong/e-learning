  body
    = render 'admin/header'
    .container-fluid
      .row
        = render 'admin/sidebar'
        main.col-10
          - flash.each do |message_type, message|
            = content_tag(:div, class:"alert alert-dismissible alert-#{message_type} mt-3") do
              span #{message}
              button.close aria-label="Close" data-dismiss="alert" type="button" 
